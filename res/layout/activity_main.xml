<edu.sysuedaily.utils.MainScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/head_news"
            android:layout_width="match_parent"
            android:layout_height="200dp" >

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </android.support.v4.view.ViewPager>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="头条新闻News" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:background="#aa000000"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1.0"
                    android:paddingLeft="10dp"
                    android:text="文字文字"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <View
                        android:id="@+id/dot0"
                        style="@style/viewpager_dot_style"
                        android:background="@drawable/dot_focused" />

                    <View
                        android:id="@+id/dot1"
                        style="@style/viewpager_dot_style"
                        android:background="@drawable/dot_normal" />

                    <View
                        android:id="@+id/dot2"
                        style="@style/viewpager_dot_style"
                        android:background="@drawable/dot_normal" />

                    <View
                        android:id="@+id/dot3"
                        style="@style/viewpager_dot_style"
                        android:background="@drawable/dot_normal" />

                    <View
                        android:id="@+id/dot4"
                        style="@style/viewpager_dot_style"
                        android:background="@drawable/dot_normal" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame_attitude" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/main_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:paddingTop="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:id="@+id/linear_attitude" >

                <ImageView
                    android:id="@+id/attitude_img"
                    android:layout_width="105dp"
                    android:layout_height="81dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/attitude" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="14dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/title_activity_attitude"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#065710" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/attitude_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:lineSpacingExtra="4sp"
                        android:text="“在实现城市升级的过程中，城市行政体制改革是最为关键的步关键的步关键的步关键的步.."
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/attitude" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame_weibo" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/main_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:paddingTop="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:id="@+id/linear_weibo" >

                <ImageView
                    android:id="@+id/weibo_img"
                    android:layout_width="105dp"
                    android:layout_height="81dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/weibo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="14dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/title_activity_weibo"
                            android:textColor="#065710"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/weibo_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:lineSpacingExtra="4sp"
                        android:text="“在实现城市升级的过程中，城市行政体制改革是最为关键的步关键的步关键的步关键的步.."
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/weibo" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame_visual" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/main_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:paddingTop="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:id="@+id/linear_visual" >

                <ImageView
                    android:id="@+id/visual_img"
                    android:layout_width="105dp"
                    android:layout_height="81dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/visual" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="14dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="#065710"
                            android:text="@string/title_activity_visual"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/visual_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:lineSpacingExtra="4sp"
                        android:text="“在实现城市升级的过程中，城市行政体制改革是最为关键的步关键的步关键的步关键的步.."
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/visual" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame_spitslot" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/main_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:paddingTop="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:id="@+id/linear_spitslot" >

                <ImageView
                    android:id="@+id/spitslot_img"
                    android:layout_width="105dp"
                    android:layout_height="81dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/spitslot" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="14dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="#065710"
                            android:text="@string/title_activity_spitslot"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/spitslot_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:lineSpacingExtra="4sp"
                        android:text="“在实现城市升级的过程中，城市行政体制改革是最为关键的步关键的步关键的步关键的步.."
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/spitslot" />
        </FrameLayout>
    </LinearLayout>

</edu.sysuedaily.utils.MainScrollView>